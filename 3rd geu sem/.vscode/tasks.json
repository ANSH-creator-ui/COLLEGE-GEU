{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run C",
      "type": "shell",
      "command": "C:/MinGW/bin/gcc.exe",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build C file with gcc"
    },
    {
      "label": "run C program",
      "type": "shell",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "build and run",
      "dependsOn": ["build and run C", "run C program"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}